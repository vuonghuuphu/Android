<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:layout_marginTop="10sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Bạn muốn thêm vào đâu "
        android:textColor="@color/black"
        android:textSize="25sp"
        android:layout_gravity="center"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/themthunhap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20sp"
        android:layout_gravity="center"
        android:background="@drawable/borderadd"
        android:padding="10sp">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="57dp"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/ic_thunhap_add"
            tools:ignore="VectorDrawableCompat" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Thêm vào thu nhập "
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/themchitieu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"
        android:layout_gravity="center"
        android:background="@drawable/borderadd"
        android:padding="10sp">

        <ImageView
            android:id="@+id/imageViewchitieu"
            android:layout_width="57dp"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/ic_chitieuadd"
            tools:ignore="VectorDrawableCompat" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Thêm vào chi tiêu "
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textStyle="bold" />
    </LinearLayout>
    <Button
        android:id="@+id/btn_huy_add2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="Hủy"
        android:layout_gravity="center"
        android:layout_margin="10sp"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:backgroundTint="@color/white"
        />
</LinearLayout>